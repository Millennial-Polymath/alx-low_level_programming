CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm -f
CFLAGS= -Wall -Werror -Wextra -pedantic

%.o:%.c
	$(CC) $(CFLAGS) -c -o $@ $<


all: $(OBJ)
	$(CC) $(OBJ) -o holberton

.PHONY: clean
clean:
	$(RM) *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: fclean all
